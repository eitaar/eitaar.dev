---
import type { SvgComponent } from "astro/types";

interface Props {
	heading: string;
	text: string;
	Icon: SvgComponent;
	iconPosition?: "left" | "right";
	iconSize?: number;
}
const { heading, text, Icon, iconPosition, iconSize } = Astro.props;
const size = iconSize ?? 100;
const isLeft = iconPosition === "left" || !iconPosition;
---

<div
	class="flex flex-col items-center gap-6 px-4 text-left sm:items-start sm:gap-10"
	class:list={isLeft ? "sm:flex-row" : "sm:flex-row-reverse"}
>
	<div class="flex items-start justify-center sm:justify-start">
		<Icon
			class="fill-current text-content"
			height={size}
			width={size}
			aria-hidden="true"
			focusable="false"
		/>
	</div>

	<div class="flex w-full flex-col items-center gap-2 sm:items-start sm:gap-4">
		<h4 class="headline text-center sm:text-left">{heading}</h4>
		<p class="text text-center leading-relaxed whitespace-pre-line text-subContent sm:text-left">
			{text}
		</p>
	</div>
</div>
