---
const navItems = [
	{ name: "Top", href: "/" },
	{ name: "About", href: "/#about" },
	{ name: "Projects", href: "/#projects" },
];
interface Props {
	sticky?: boolean;
}
const { sticky = false } = Astro.props;
---

<header
	class="z-20 w-full backdrop-blur-lg sm:backdrop-blur-none"
	class:list={sticky ? "fixed top-0" : ""}
>
	<nav class="container mx-auto flex h-16 items-center justify-between px-6 sm:px-12">
		<a href="/" aria-label="Home">
			<h1 class="font-Ndot text-2xl tracking-wider">EITAAR</h1>
		</a>
		<ul class="flex items-center gap-6 sm:gap-8">
			{
				navItems.map((item) => (
					<li>
						<a href={item.href} class="font-SpaceMono text-sm tracking-wider text-content">
							{item.name}
						</a>
					</li>
				))
			}
		</ul>
	</nav>
</header>
