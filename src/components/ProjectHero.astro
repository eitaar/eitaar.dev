---
interface Props {
	title: string;
	description: string;
	chips: string[];
	numbering: number;
	imagePosition: "left" | "right";
	imageSrc: ImageMetadata;
}
const { title, description, chips, numbering, imagePosition, imageSrc } = Astro.props;

import { Image } from "astro:assets";
import ChipComponent from "./ChipComponent.astro";
---

<div
	class="flex items-start justify-center gap-10 px-28"
	class:list={imagePosition === "left" ? "flex-row" : "flex-row-reverse"}
>
	<Image
		src={imageSrc}
		alt={title}
		class="rounded-lg border-2 border-content object-cover grayscale"
		format="avif"
		width={440}
		height={248}
	/>
	<div class="flex flex-col gap-3 py-1">
		<p class="numbering">({numbering.toString().padStart(3, "0")})</p>
		<h4 class="projectTitle">{title}</h4>
		<p class="text">{description}</p>
		<div class="flex items-center justify-start gap-4">
			{chips.map((text) => <ChipComponent text={text} />)}
		</div>
	</div>
</div>
