---
import { Icon } from "astro-icon/components";
import type { SkillProps } from "../types/global";
import ChipUI from "./ui/ChipUI.astro";

interface Props extends SkillProps {}
const { icon, name, description, confidence, tags } = Astro.props;
---
<div class="SKILLCARD rounded-lg bg-base-100 p-6 shadow" data-tag={tags[1].toLowerCase()}>
	<div class="mb-3 flex items-center">
		<Icon name={icon} class="mr-3 h-8 w-8"/>
		<h3 class="text-xl font-semibold">{name}</h3>
	</div>
	<div class="mb-4 flex flex-wrap gap-2">
		{tags && tags?.map((tag) => <ChipUI label={tag} size="sm" />)}
	</div>
	<div class="flex items-center">
		<span class="mr-2 text-sm">Confidence:</span>
		<div class="flex">
			{
        Array.from({ length: 5 }, (_, i) => (
          <Icon
            name="mdi:star"
            class={`h-5 w-5 ${i < confidence ? "fill-current text-yellow-400" : "text-gray-300"}`}
          />
        ))
      }
		</div>
	</div>
</div>
