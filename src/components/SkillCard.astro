---
import { Icon } from "astro-icon/components";
import type { SkillProps } from "../types/global";
import ChipUI from "./ui/ChipUI.astro";

interface Props extends SkillProps {}
const { icon, name, description, confidence, tags } = Astro.props;
---
<div
	class="SKILLCARD flex flex-col rounded-lg bg-base-100 p-6 shadow transition-shadow hover:shadow-lg"
	data-tag={tags[1].toLowerCase()}
>
	<div class="mb-4 flex items-center gap-3">
		<div class="shrink-0">
			<Icon name={icon} class="h-10 w-10"/>
		</div>
		<h3 class="text-xl font-semibold leading-tight">{name}</h3>
	</div>
	<div class="mb-auto flex flex-wrap gap-2 pb-4">
		{tags && tags?.map((tag) => <ChipUI label={tag} size="sm" />)}
	</div>
	<div class="flex items-center gap-2 border-t border-base-300 pt-4">
		<span class="text-sm font-medium text-base-content/70">Confidence:</span>
		<div class="flex gap-0.5">
			{
        Array.from({ length: 5 }, (_, i) => (
          <Icon
            name="mdi:star"
            class={`h-5 w-5 ${i < confidence ? "fill-current text-yellow-400" : "fill-current text-base-300"}`}
          />
        ))
      }
		</div>
	</div>
</div>
