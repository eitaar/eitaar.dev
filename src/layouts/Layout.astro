---
import "../styles/global.css";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title: string;
	description: string;
	showHeader?: boolean;
	stickyHeader?: boolean;
	showFooter?: boolean;
}
const {
	title,
	description,
	showHeader = true,
	stickyHeader = false,
	showFooter = true,
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description}/>
	</head>
	<body class="bg-bg">
		<Header sticky={stickyHeader}/>
		<main>
			<slot/>
		</main>
		<Footer/>
		<script src="../assets/src/index.ts"></script>
	</body>
</html>
