---
import { Image } from "astro:assets";
import Glyph from "../assets/glyph.svg";
import dotAvatar from "../assets/img/dotAvatar.png";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<Glyph
		aria-label="glyph logo"
		class="absolute top-1/2 left-1/2 -z-10 m-auto w-11/12 -translate-x-1/2 -translate-y-1/2 fill-current text-white blur md:h-4/5 md:w-auto md:blur-xl"
	/>
	<div
		class="flex h-screen w-full flex-col-reverse items-center justify-center gap-4 md:flex-row md:gap-16"
	>
		<div class="flex flex-col items-center justify-center gap-1 md:items-start md:gap-4">
			<h2 class="font-Ndot text-5xl tracking-wider md:text-7xl">EITAAR</h2>
			<p
				class="mt-2 pl-1 font-SpaceMono text-lg tracking-[0.2rem] text-subContent md:mt-4 md:text-2xl"
			>
				DEVELOPER
			</p>
		</div>
		<Image
			src={dotAvatar}
			alt="Dot Avatar"
			class="h-36 w-36 rounded-full md:h-56 md:w-56"
			fetchpriority={"high"}
			loading={"eager"}
			format="avif"
		/>
	</div>
</Layout>
