---
import { Image } from "astro:assets";
import { bigint } from "astro:schema";
import Glyph from "../assets/glyph.svg";
import dotAvatar from "../assets/img/dotAvatar.png";
import portfolioImage from "../assets/img/projects/portfolio.png";
import blenderIcon from "../assets/svg/blender.svg";
import typescriptIcon from "../assets/svg/typescript.svg";
import AboutHero from "../components/AboutHero.astro";
import ProjectHero from "../components/ProjectHero.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
	<Glyph
		aria-label="glyph logo"
		class="absolute top-1/2 left-1/2 -z-10 m-auto w-11/12 -translate-x-1/2 -translate-y-1/2 fill-current text-white blur sm:h-4/5 sm:w-auto sm:blur-xl"
	/>
	<div
		class="flex h-screen w-full flex-col-reverse items-center justify-center gap-4 sm:flex-row sm:gap-16"
	>
		<div class="flex flex-col items-center justify-center gap-1 sm:items-start sm:gap-4">
			<h2 class="font-Ndot text-4xl tracking-wider sm:text-7xl">EITAAR</h2>
			<p
				class="mt-2 pl-1 font-SpaceMono text-sm tracking-[0.2rem] text-subContent sm:mt-4 sm:text-2xl"
			>
				DEVELOPER
			</p>
		</div>
		<Image
			src={dotAvatar}
			alt="Dot Avatar"
			class="h-32 w-32 rounded-full sm:h-56 sm:w-56"
			fetchpriority={"high"}
			loading={"eager"}
			format="avif"
		/>
	</div>
	<div
		class="container mx-auto flex h-screen flex-col items-center justify-center gap-12 sm:gap-16"
	>
		<h3 class="title">ABOUT</h3>
		<AboutHero
			heading="Engineered with logic. Designed with aesthetics."
			text={`I work with a wide range of modern technologies, including TypeScript, Python, Astro, and Vue.\nIâ€™m currently expanding my skills in 3D modelling, graphic design, and Rust to support my projects.`}
			Icon={typescriptIcon}
			iconPosition="left"
		/>
		<AboutHero
			heading="More than just a hobby."
			text={`In my free time, I enjoy exploring creative pursuits like coding, 3D modelling, and reading comics.\nI love experimenting with new tools and techniques that help me bring ideas to life`}
			Icon={blenderIcon}
			iconPosition="right"
		/>
	</div>
	<div
		class="container mx-auto flex h-screen flex-col items-center justify-center gap-12 sm:gap-16"
	>
		<ProjectHero
			title="PORTFOLIO"
			description="An unofficial third-party Kahoot! client designed to improve the user experience. Built using NuxtJS and a custom Kahoot API module."
			imageSrc={portfolioImage}
			imagePosition="left"
			chips={["Astro", "Tailwind CSS"]}
			numbering={1}
		/>
	</div>
</Layout>
